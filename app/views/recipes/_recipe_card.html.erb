<div class="recipe-card" >
  <%= cl_image_tag recipe.photo.key %>
  <div class="card-content">
    <div class="d-flex justify-content-between w-100 align-items-center">
      <% if recipe.icons_count == 0 %>
        <h2><%= recipe.title.capitalize.truncate(23) %></h2>
      <% elsif recipe.icons_count == 1 %>
        <h2><%= recipe.title.capitalize.truncate(18) %></h2>
      <% elsif recipe.icons_count == 2 %>
        <h2><%= recipe.title.capitalize.truncate(15) %></h2>
      <% elsif recipe.icons_count == 3 %>
        <h2><%= recipe.title.capitalize.truncate(12) %></h2>
      <% else %>
        <h2><%= recipe.title.capitalize.truncate(9) %></h2>
      <% end %>
      <div class="dietary-type text-end mb-2">
        <% if recipe.vegan? %>
          <%= image_tag "vegan.png", width: 8, height: 8, class:"diet-icons" %>
        <% end %>
        <% if recipe.vegetarian? %>
          <%= image_tag "vegetarian.png", width: 8, height: 8, class:"diet-icons" %>
        <% end %>
        <% if recipe.gluten_free? %>
          <%= image_tag "gluten-free.png", width: 8, height: 8, class:"diet-icons" %>
        <% end %>
        <% if recipe.dairy_free? %>
          <%= image_tag "dairy-free.png", width: 8, height: 8, class:"diet-icons" %>
        <% end %>
      </div>
    </div>
    <div class="card-details">
      <p class="card-description"><%= recipe.description.truncate(100) %></p>
      <div class="rating_bookmark">
        <p><%= recipe.average_rating %> ⭐️</p>
        <div class="icon-btn"  >
          <%= render 'icon_btn',  recipe: recipe %>
        </div>
      </div>
    </div>
  </div>
</div>
