<div class="recipe-card" >
  <%= cl_image_tag recipe.photo.key %>
  <div class="card-content">
    <div class="d-flex justify-content-between w-100 align-items-center">
      <% if recipe.icons_count == 0 %>
        <h2><%= recipe.title.capitalize.truncate(23) %></h2>
      <% elsif recipe.icons_count == 1 %>
        <h2><%= recipe.title.capitalize.truncate(18) %></h2>
      <% elsif recipe.icons_count == 2 %>
        <h2><%= recipe.title.capitalize.truncate(15) %></h2>
      <% elsif recipe.icons_count == 3 %>
        <h2><%= recipe.title.capitalize.truncate(12) %></h2>
      <% else %>
        <h2><%= recipe.title.capitalize.truncate(9) %></h2>
      <% end %>
      <div class="dietary-type text-end mb-2">
        <% if recipe.vegan? %>
          <%= image_tag "vegan1.png", width: 8, height: 8, class:"diet-icons" %>
        <% end %>
        <% if recipe.vegetarian? %>
          <%= image_tag "vegetarian1.png", width: 8, height: 8, class:"diet-icons" %>
        <% end %>
        <% if recipe.gluten_free? %>
          <%= image_tag "gluten-free1.png", width: 8, height: 8, class:"diet-icons" %>
        <% end %>
        <% if recipe.dairy_free? %>
          <%= image_tag "dairy1.png", width: 8, height: 8, class:"diet-icons" %>
        <% end %>
      </div>
    </div>
    <div class="card-details">
      <p class="card-description"><%= recipe.description.truncate(100) %></p>
      <div class="rating_bookmark">
        <p class="rating">
            <%  recipe.average_rating.to_i.times do  %>
              <img class="star" src="https://img.icons8.com/fluency/20/star--v1.png" alt="star--v1"/>
            <% end %>
            <% if  recipe.average_rating - recipe.average_rating.to_i > 0 %>
              <img class="star" src="https://img.icons8.com/color/20/star-half-empty.png" alt="star-half-empty"/>
            <% end %>
          </p>
        <div class="icon-btn"  >
          <%= render 'icon_btn',  recipe: recipe %>
        </div>
      </div>
    </div>
  </div>
</div>
