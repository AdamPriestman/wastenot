<div class="recipe-card">
  <%= cl_image_tag recipe.photo.key %>
  <div class="card-content">
    <h2><%= recipe.title %></h2>
    <div class="card-details">
      <p class="card-description"><%= recipe.description.truncate(100) %></p>
      <div class="rating_bookmark" data-controller="toggle">
        <p>4.2 ⭐️</p>
        <%# need to add link to bookmark%>
        <i class="fa-regular fa-bookmark" data-toggle-target="bookmarkFalse" data-action="click->toggle#create_bookmarkbookmark"></i>
        <i class="fa-solid fa-bookmark d-none" data-toggle-target="bookmarkTrue" data-action="click->toggle#delete_bookmark"></i>
      </div>
    </div>
  </div>
</div>
