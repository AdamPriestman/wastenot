<div class="recipe-card" >
  <%= cl_image_tag recipe.photo.key %>
  <div class="card-content">
    <h2><%= recipe.title %></h2>
    <div class="card-details">
      <p class="card-description"><%= recipe.description.truncate(100) %></p>
      <div class="rating_bookmark">
        <p><%= recipe.average_rating %> ⭐️</p>
        <div class="icon-btn"  >
          <%= render 'icon_btn',  recipe: recipe %>
        </div>
      </div>
    </div>
  </div>
</div>
