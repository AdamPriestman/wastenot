<div class="container">

  <h1 class="text-center">Build Your Recipe</h1>

  <%= form_with url: recipes_path, method: :get, class: "d-flex flex-column" do %>
    <%= label_tag("Ingredients") %>
    <input type="range" id="cooktime" name="cooktime" min="0" max="100">
    <%= label_tag("Max Cooktime") %>
    <input type="range" id="servings" name="servings" min="1" max="8">
    <output></output>
    <%= label_tag("Servings") %>
    <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
  <% end %>

</div>
