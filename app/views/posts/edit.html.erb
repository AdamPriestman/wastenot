<div class="container mt-3">
  <h1><%= @recipe.title %></h1>
  <h5 class="pt-2 pb-2">Edit your post</h5>
  <%= simple_form_for [@post] do |f| %>
    <%= f.input :title, label: 'Your post title!' %>
    <%= f.input :photo, label: 'Upload your food picture', as: :file %>
    <%= f.input :rating, label: 'Rate the recipe',
      collection: [[' ⭐️', '1'],
      [' ⭐️⭐️', '2'],
      [" ⭐️⭐️⭐️", '3'],
      [" ⭐️⭐️⭐️⭐️", '4'],
      [" ⭐️⭐️⭐️⭐️⭐️", '5']] %>
    <%= f.input :description, label: 'Describe your recipe experience' %>
    <%= f.submit %>
  <% end %>
</div>
